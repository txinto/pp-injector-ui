CONFIG_LVGL_PORT_ROTATION_270=y
CONFIG_LVGL_PORT_ROTATION_DEGREE=270
CONFIG_LV_MEM_SIZE_KILOBYTES=128
CONFIG_LV_MEM_POOL_EXPAND_SIZE_KILOBYTES=64
CONFIG_PPINJECTORUI_STORAGE_SELFTEST=n
CONFIG_PPINJECTORUI_UART_ENABLE=y
CONFIG_PPINJECTORUI_UART_PORT=0
CONFIG_PPINJECTORUI_UART_BAUD=115200
CONFIG_PPINJECTORUI_UART_TX_GPIO=43
CONFIG_PPINJECTORUI_UART_RX_GPIO=44
# Board flash is 4MB on PPInjector displays
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
# CONFIG_ESPTOOLPY_FLASHSIZE_16MB is not set
CONFIG_ESPTOOLPY_FLASHSIZE="4MB"
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions_ppinjector_4mb.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions_ppinjector_4mb.csv"
# Console over UART0 (boards exposing ttyUSBx only)
CONFIG_ESP_CONSOLE_UART_DEFAULT=y
# CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG is not set

CONFIG_OTA_FIRMWARE_UPGRADE_URL="https://gitlab.com/txinto/public/-/raw/main/firmware/esp32s3_ppinjectorui_elec.bin"

# Keep UI/UART boot path free even if device is not provisioned
CONFIG_PROVISIONING_AUTOSTART_IF_NOT_PROVISIONED=n
# CONFIG_PROV_SHOW_QR is not set
